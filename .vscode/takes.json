{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build", 
            "type": "shell", 
            "command": "gcc", 
            "args": [    
                "${file}",
                "-o", 
                "${fileDirname}\\bin\\${fileBasenameNoExtension}.exe", 
                "-g", 
                "-Wall", 
                "-static-libgcc",  
                "-fexec-charset=GBK", 
                "-std=c11"
            ],
            "group": {  
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new" 
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "run", 
            "type": "shell", 
            "dependsOn": "build",
            "command": "${fileDirname}\\bin\\${fileBasenameNoExtension}.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            }
        }

    ]
}